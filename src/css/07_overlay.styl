@import '00_variables.styl'
@import 'nib'

.ngdialog
    input
        padding 10px 20px
    .ngdialog-content
        max-width 100%
        width 550px
        margin 10% auto
        border-radius 2px
        position relative
        animation ngdialog-flyin .5s
        -webkit-animation ngdialog-flyin .5s
        -moz-animation ngdialog-flyin .5s
        -o-animation ngdialog-flyin .5s

    .ngdialog-close
        border-radius 5px
        cursor pointer
        position absolute
        right 0
        top 0
        &:before
            background transparent
            border-radius 3px
            color #bbb
            content '\00D7'
            font-size 26px
            font-weight 400
            height 30px
            line-height 26px
            position absolute
            right 3px
            text-align center
            top 3px
            width 30px

    &.ngdialog-closing .ngdialog-content
        animation ngdialog-flyout .5s
        -webkit-animation ngdialog-flyout .5s
        -moz-animation ngdialog-flyout .5s
        -o-animation ngdialog-flyout .5s

@media (max-width: 767px)
    .ngdialog .ngdialog-content
        max-width 95%

.overlay-header
    margin 0
    padding 8px 14px
    text-align center
    font-size 16px
    font-weight 200
    opacity 0.8
    background rgba(0,0,0,0.1)
    border-radius 3px 3px 0 0

.overlay-footer
    border-top 1px solid $border
    background $bg
    padding 10px 30px
    width 100%
    display block
    border-radius 0 0 2px 2px
    i
        font-size 20px
        display inline-block
        vertical-align bottom

@keyframes ngdialog-flyin {
    0% {
        opacity: 0;
        transform: translateY(-40px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes ngdialog-flyout {
    0% {
        opacity: 1;
        transform: translateY(0);
    }
    100% {
        opacity: 0;
        transform: translateY(-40px);
    }
}