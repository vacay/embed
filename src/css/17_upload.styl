@import '00_variables.styl'
@import 'nib'

.upload
    position relative
    border 2px dashed $border
    min-height 96px
    text-align center
    color $text-light
    .btn
        position relative
    input.hidden
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin 0
        opacity 0
        cursor pointer
        direction ltr

.image-container:not(.placeholder)
    .upload
        border none

.ngdialog .upload
    padding 20px 0
