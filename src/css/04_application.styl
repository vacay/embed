@import '00_variables.styl'
@import 'nib'

.transition
    transition all $transition

.reverse
    unicode-bidi bidi-override
    direction rtl

.close
    border-radius 5px
    cursor pointer
    &:before
        background transparent
        border-radius 3px
        color $text-light
        content '\00D7'
        font-size 26px
        font-weight 400
        height 30px
        line-height 26px
        position absolute
        right 3px
        text-align center
        top 3px
        width 30px

.cf
    &:before
    &:after
        content " "
        display table
    &:after
        clear both

.pull-right
    float right

.help
    position absolute
    right 10px
    top 5px
    font-size 24px

.cursor
    cursor pointer

#sm2-container
.ym-container
    position absolute
    left -999999px
    top -999999px

[ng\cloak]
[ng-cloak]
.ng-cloak
    display none !important