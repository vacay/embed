@import '00_variables.styl'

.notifications
    position fixed
    z-index 10002
    width 50%
    right 25%
    left 25%
    top 10px

@media (max-width: 767px)
    .notifications
        width 90%
        left 5%
        right 5%

.notification
    position relative
    color white
    .notification-content
        padding 10px
    .close
        cursor pointer
        float right
        font-size 21px
        font-weight bold
        line-height 1
        opacity 0.7
        &:before
            color white

.notification-success
    background-color $green

.notification-info
    background-color $grey

.notification-warning
    background-color $orange

.notification-error
    background-color $red

.notification.ng-enter.ng-enter-active
    opacity 1

.notification.ng-enter
    opacity 0

.notification.ng-leave
    opacity 0