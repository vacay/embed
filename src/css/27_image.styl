@import '00_variables.styl'
@import 'nib'

img
    max-width 100%

.image-container
    display block
    min-height 100px
    text-align center
    color $text-light
    img
        width 100%
    span
        display none
        line-height 96px
    &.placeholder
        border-top 2px dashed $border
        border-bottom 2px dashed $border
    &.editable.placeholder
        span
            display block
    &.editable:hover
        opacity .3


.item .image-container
    width 100%
    height 100px
    position relative
    overflow hidden
    img
        position absolute
        left -100%
        right -100%
        top -100%
        bottom -100%
        margin auto 
        min-height 100%
        min-width 100%