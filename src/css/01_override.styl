@import '00_variables.styl'

:focus
    outline none

ul
    padding 0
    list-style none
    list-style-image none

input
textarea
    width 100%
    border-radius 0
    border none
    border-bottom 1px solid $border
    background-color transparent
    box-shadow none
    font-weight 300
	&:hover
	&:focus
        box-shadow none
        outline none
    padding 10px 0 10px 0px
    margin 0
    &.ng-invalid.ng-dirty
        border-color $red
    &.ng-valid.ng-dirty
        border-color $green