@import '00_variables.styl'
@import 'nib'

#search
    font-size 2em
    input
        font-weight 100
        border none
    .search-type
        position absolute
        color #CCC
        top 35px
        left -50px

.secondary-results
.primary-results
    vertical-align top
    display inline-block

.secondary-results
    width 35%
    padding-right 30px

.primary-results
    width 65%

.tertiary-results
    display block
    width 100%

.results-heading
    font-family "jaf-bernino-sans","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Geneva,Verdana,sans-serif
    letter-spacing -0.02em
    font-weight 700
    font-style normal
    padding 12px 0 28px
    text-transform uppercase
    font-size 11px
    letter-spacing .1em
    color #b3b3b1
    border-top 1px solid $border
    margin-top 30px
